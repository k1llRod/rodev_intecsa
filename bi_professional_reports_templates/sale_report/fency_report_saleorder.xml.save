                                        <td class="text-right" style="border-right:1px solid #000;">
                                            &amp;nbsp;
                                        </td>
                                        <td class="text-right" style="border-right:1px solid #000;">
                                            &amp;nbsp;
                                        </td>
                                    </tr>
			            <tr t-if="l.display_type == 'line_note' and o.print_image == '0'">
