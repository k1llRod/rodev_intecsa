<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
	<record model="ir.ui.view" id="sale_order_view_inherit_print">
            <field name="name">sale.order.view.inherit_print</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="vr_print_line"/>
                </xpath>
            </field>
        </record>
        <template id="fency_report_saleorder_document">

            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <t t-set="p" t-value="doc.with_context({'lang':doc.partner_id.lang})"/>
            <div class="header" style="">
                <div class="row mt32 mb32">
                    <div class="col-4 text-center" style="">
			<tr>			
                        	<!--<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 90px;" />-->
				<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="resize:both;width:95%;height:auto" />
			</tr>
		    </div>
                    <div class="col-4 text-center" style="">
                        <h2>
                            <span><font>PROFORMA </font></span>
                            <font><span t-field="p.name"/></font>
                        </h2>
                    </div>
                    <div class="col-4 text-center" style="font:12px lucida-console,sans-serif !important;">
                        <span t-field="company.partner_id" style="font:16px"/>
                        <br/>
                        <span t-field="company.partner_id.street" />
                        <br/>
                        <span t-field="company.partner_id.street2" />
                        <br/>
                        <span t-field="company.partner_id.phone" />
                        <br/>
                        <span t-field="company.partner_id.city" />
                        <br/>
                        <span t-field="company.partner_id.country_id" />
                        <br/>
                    </div>
                </div>
            </div>

            <t t-call="web.external_layout">
                <t t-set="o" t-value="doc.with_context({'lang':doc.partner_id.lang})" /> 
		        <div class="page" style="min-height: 100%;">
                    <div class="oe_structure" />
                    <div class="row mt32 mb32" style="">
                        <div class="col-6 " style="font-size:11px;"><br/>
                            <style type="text/css">
   					            .transformacion1 { text-transform: capitalize;}
                                .transformacion2 { text-transform: uppercase;}
   					            .transformacion3 { text-transform: lowercase;}
   				            </style>
                                    <!--<span t-esc="o.today_date.strftime(' %A, %d de %B del %Y')"></span><br/>-->
                            <span class="transformacion1" t-field="o.date_order" t-options="{'format': 'eeee, d '}"/>
                                de
                                <span class="transformacion1" t-field="o.date_order" t-options="{'format': 'MMMM '}"/>
                                del
                                <span t-field="o.date_order" t-options="{'format': 'YYYY'}"/><br/>
                                <strong>Señor (es):</strong><br/>
                                    <span t-field="o.partner_id" /><br/>
                                    <span t-if="o.partner_id.street" 
                                        t-field="o.partner_id.street" /><br/>
                                    <span t-if="o.partner_id.street2"
                                        t-field="o.partner_id.street2" />
                                    <span t-if="o.partner_id.city" t-field="o.partner_id.city" />
                                    <span t-if="o.partner_id.state_id" 
                                        t-field="o.partner_id.state_id" />
                                    <span t-if="o.partner_id.country_id" t-field="o.partner_id.country_id" />
                        </div>
                        <div class="col-6 text-left" style="font-size:11px;"><br/>
                            <strong t-if="o.vr_validez">Validéz: </strong>
                            <span t-if="o.vr_validez" t-field="o.vr_validez" /><br/>
                            <strong t-if="o.vr_garantia">Garantía: </strong>
                            <span t-if="o.vr_garantia" t-field="o.vr_garantia" /><br/>
                            <strong t-if="o.vr_entrega">Entrega: </strong>
                            <span t-if="o.vr_entrega" t-field="o.vr_entrega" /><br/>
                            <strong t-if="o.vr_fpago">Forma de pago: </strong>
                            <span t-if="o.vr_fpago" t-field="o.vr_fpago" />
                        </div>
                    </div>

                        <!-- Is there a discount on at least one line? -->
                    <style type="text/css">
                        table { page-break-inside:auto }
                        tr    { page-break-inside:avoid; page-break-after:auto }
                        thead { display:table-header-group }
                        tfoot { display:table-footer-group }
                    </style>
                    <t t-set="display_discount" t-value="any([l.discount for l in o.order_line])" />
                    <table class="table table-bordered" style=" page-break-inside: always; page-break-after: avoid; font-size:11px;">
                        <col t-if="o.print_image " width="30%"/>
                        <col width="80%"/>
                        <col width="10%"/>
                        <col width="10%"/>
                        <col width="10%"/>
                        <tr style="font-size:11px;">
                            <tr>
                                <th t-if="o.print_image " style="">Imagen</th>
                                <th class="text-left" style="">Descripción</th>
                                <th class="text-right" style="">Cant.</th>
                                <th class="text-right" style="">P. U.</th>
                                <th class="text-right" style="">Subtotal</th>
                            </tr>
                        </tr>
                        <tbody class="invoice_tbody" style="min-height: 100%; font-size:11px;">
                            <t t-foreach="doc.order_line" t-as="l">
                                <tr t-if="l.product_uom_qty and l.price_unit">
                                    <td class="text-center" t-if="o.image_sizes == 'image' and o.print_image " style="">
                                        <img t-if="l.image_small" t-attf-src="data:image/*;base64,{{l.image_small}}" style="resize:both;width:95%;height:auto"/>
                                    </td>
                                    <td class="text-center" t-if="o.image_sizes == 'image_medium' and o.print_image " style="">
                                        <img t-if="l.image_small" t-attf-src="data:image/*;base64,{{l.image_small}}" style="resize:both;width:70%;height:auto"/>
                                    </td>
                                    <td class="text-center" t-if="o.image_sizes == 'image_small' and o.print_image " style="">
                                        <img t-if="l.image_small" t-attf-src="data:image/*;base64,{{l.image_small}}" style="resize:both;width:50%;height:auto"/>
                                    </td>
                                    <td class="text-left" style="">
                                        <span t-field="l.name" />
                                    </td>
                                    <td class="text-right" style="">
                                        <span t-field="l.product_uom_qty" />
                                        <span groups="product.group_uom" t-field="l.product_uom" />
                                    </td>
                                    <td class="text-right" style="">
                                        <span t-field="l.price_unit" />
                                    </td>
                                    <td class="text-right" style="">
                                        <t t-set="t_total" t-value="l.product_uom_qty*l.price_unit"/>
                                        <t t-esc="'{0:,.2f}'.format(t_total)"/>
                                    </td>
                                </tr>
                                <tr t-if="l.display_type == 'line_note' and o.print_image ">
                                    <td class="text-center" style="">
                                            &amp;nbsp;
                                    </td>
                                    <td class="text-left" style="">
                                        <span t-field="l.name" />
                                    </td>
                                    <td class="text-center" style="">
                                            &amp;nbsp;
                                    </td>
                                    <td class="text-right" style="">
                                            &amp;nbsp;
                                    </td>
                                    <td class="text-right" style="">
                                            &amp;nbsp;
                                    </td>
                                </tr>
                                <tr t-if="l.display_type == 'line_note' and not o.print_image">
                                    <td class="text-left" style="border-left:1px solid #000; border-right:1px solid #000;">
                                        <span t-field="l.name"/>
                                    </td>
                                    <td class="text-center" style="">
                                            &amp;nbsp;
                                    </td>
                                    <td class="text-right" style="">
                                            &amp;nbsp;
                                    </td>
                                    <td class="text-right" style="">
                                            &amp;nbsp;
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <div  name="total">
                    <div class="col-4 pull-right">
                        <table class="table table-condensed">
                            <tr>
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_total" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}' />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>
    </data>
</odoo>
