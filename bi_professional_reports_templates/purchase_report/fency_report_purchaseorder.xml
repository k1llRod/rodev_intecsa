<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="fency_report_purchaseorder_document">
	    <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
	    <t t-set="p" t-value="o.with_context({'lang':o.partner_id.lang})" />
            <div class="header">
                <div class="row mt32 mb32">
                    <div class="col-4">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 50px;" />
                    </div>
		    <div class="col-4 text-center" style="border-right: 1px solid black;">
                        <h4>
                            <span><font>COMPRA DE MERCADERIA </font></span><br/>
                            <font><span t-field="p.name"/></font>
                        </h4>
                    </div>
                    <div class="col-4 text-right" style="font:12px lucida-console,sans-serif !important;">
                        <span t-field="company.partner_id" />
                        <br/>
                        <span t-field="company.partner_id.street" />
                        <br/>
                        <span t-field="company.partner_id.street2" />
                        <br/>
                        <span t-field="company.partner_id.city" />
                        <br/>
                        <span t-field="company.partner_id.country_id" />
                        <br/>
                    </div>
                </div>
            </div>
